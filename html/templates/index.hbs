<!-- header partial -->
{{> headerPartial }}

    <!-- Fixed top navbar -->
    {{> topnavbarPartial details_active=true }}

    <!-- Begin page content -->
    <div class="container">

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" href="#">Overview</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Apps</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Logs</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="#">Artifacts</a>
  </li>
</ul>

<!-- By default, index page will show Details page -->
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <h3 class="card-header">Device</h3>
        <div class="card-block">
          <h4 class="card-title">Device Summary</h4>
            <ul>
              <li>Device Type: {{device.summary.DeviceClass}}</li>
              <li>Product Type: {{device.summary.ProductType}}</li>
              <li>iOS Version: {{device.summary.ProductVersion}}</li>
              <li>Baseband: {{device.summary.BasebandVersion}}</li>
              <li>Passcode Protected: {{device.summary.PasswordProtected}}</li>
              <li>Provisioning Profiles: {{pprofiles.summary.pprofilesFound}}</li>
          <a href="#" class="btn btn-primary">Device Details</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <h3 class="card-header">Apps</h3>
        <div class="card-block">
        <h4 class="card-title">App Summary</h4>
          <ul>
              <li>Total apps: {{apps.summary.totalApps}}</li>
              <li>System apps: {{apps.summary.systemApps}}</li>
              <li>User apps: {{apps.summary.userApps}}</li>
              <li>Non-Apple Signed apps: {{apps.summary.nonAppleSigner}}</li>
          </ul>
          <a href="#" class="btn btn-primary">App Details</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <h3 class="card-header">Backup</h3>
        <div class="card-block">
          <h4 class="card-title">Backup Summary</h4>
            <p class="card-text">Not yet processed</p>
          <a href="#" class="btn btn-primary">Backup Details</a>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <h3 class="card-header">Logs</h3>
        <div class="card-block">
        <h4 class="card-title">Log Summary</h4>
          <ul>
            {{#if syslog}}
              <li>Syslog: {{syslog.summary.lines}} lines</li>
            {{else}}
              <li>Syslog: not present</li>
            {{/if}}
            {{#if crashreports}}
              <li>Crash Reports: {{crashreports.summary.reports}} crashes</li>
            {{else}}
              <li>Crash Reports: None</li>
            {{/if}}
          </ul>
          <a href="#" class="btn btn-primary">Log Details</a>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- footer partial -->
{{> footerPartial }}

